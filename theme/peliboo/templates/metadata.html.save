<span class="label label-default">Date</span>
<span class="published"><i class="icon-calendar"></i> {{ article.locale_date }}</span>
{% if article.author %}
by <a class="url fn" href="{{ SITEURL }}/pages/About.html">{{ article.author }}</a>
{% endif %} 

{% if article.tags %}
<span class="label label-default">Tags</span>
{% for tag in article.tags %}
	<a href="{{ SITEURL }}/{{ tag.url }}">{{ tag }}</a>
    {% if not loop.last %}
        /
    {% endif %}
{% endfor %}
{% endif %}
